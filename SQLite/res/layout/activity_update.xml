<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sqlite.UpdateActivity" >
 
 
 <TextView
        android:id="@+id/txtUpdateUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Update User"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/etUpdateID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:hint="Enter id" />

    <Button
        android:id="@+id/btnUpdateUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etUpdateID"
        android:layout_below="@+id/etUpdateID"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="141dp"
        android:text="Update User" />

    <Button
        android:id="@+id/btnResetUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnUpdateUser"
        android:layout_alignBottom="@+id/btnUpdateUser"
        android:layout_marginLeft="45dp"
        android:layout_toRightOf="@+id/btnUpdateUser"
        android:text="Reset" />

    <EditText
        android:id="@+id/etFirstNameUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etUpdateID"
        android:layout_below="@+id/etUpdateID"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Enter First Name" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/etLastNameUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etFirstNameUpdate"
        android:layout_below="@+id/etFirstNameUpdate"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Enter Last Name" />

</RelativeLayout>
