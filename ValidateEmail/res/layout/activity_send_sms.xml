<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.validateemail.SendSMSActivity" >

    <TextView
        android:id="@+id/txtSendSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Send SMS"
        android:textSize="25sp" />

     <EditText
         android:id="@+id/etNo"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/txtSendSMS"
         android:layout_marginLeft="18dp"
         android:ems="10"
         android:hint="Enter no" 
         android:inputType="number">

            <requestFocus />
         </EditText>
         
     <EditText
         android:id="@+id/etSMS"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/etNo"
         android:layout_below="@+id/etNo"
         android:layout_marginTop="39dp"
         android:ems="10"
         android:hint="Enter Message"
         android:inputType="textMultiLine" 
         android:maxLines="3">

      
     </EditText>

     <Button
         android:id="@+id/btnSendSMS"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_alignRight="@+id/txtSendSMS"
         android:layout_marginBottom="116dp"
         android:text="Send SMS" />

</RelativeLayout>